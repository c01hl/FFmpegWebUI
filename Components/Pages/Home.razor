@page "/"
@using FFmpegWebUI.Models
@using FFmpegWebUI.Services
@using FFmpegWebUI.Components.Shared
@inject IFFmpegService FFmpegService
@inject IHardwareDetectionService HardwareDetectionService
@rendermode InteractiveServer

<PageTitle>首页 - FFmpeg Web UI</PageTitle>

<div class="home-container">
    <h1>🎬 FFmpeg Web UI</h1>
    <p class="subtitle">本地媒体文件转换工具</p>

    <section class="status-section">
        <h2>📊 系统状态</h2>
        
        @if (_isLoading)
        {
            <div class="loading">
                <span class="spinner"></span> 正在检测系统环境...
            </div>
        }
        else
        {
            <div class="ffmpeg-status">
                <h3>FFmpeg 状态</h3>
                @if (_ffmpegInfo != null)
                {
                    <div class="status-card success">
                        <div class="status-icon">✓</div>
                        <div class="status-content">
                            <strong>FFmpeg 已安装</strong>
                            <p>版本: @_ffmpegInfo.Version</p>
                            <p>路径: @_ffmpegInfo.Path</p>
                            <p>支持格式: @_ffmpegInfo.SupportedFormats.Count 种</p>
                            <p>支持编解码器: @_ffmpegInfo.SupportedCodecs.Count 种</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="status-card error">
                        <div class="status-icon">✗</div>
                        <div class="status-content">
                            <strong>FFmpeg 未找到</strong>
                            <p>请确保 FFmpeg 已安装并添加到系统 PATH，或在设置中指定路径。</p>
                            <a href="https://ffmpeg.org/download.html" target="_blank">下载 FFmpeg</a>
                        </div>
                    </div>
                }
            </div>
        }
    </section>

    <section class="encoders-section">
        <div class="section-header">
            <h2>🖥️ 硬件编码器</h2>
            <button class="refresh-btn" @onclick="RefreshEncoders" disabled="@_isRefreshing">
                @if (_isRefreshing)
                {
                    <span class="spinner-small"></span>
                }
                else
                {
                    <span>🔄</span>
                }
                刷新检测
            </button>
        </div>

        @if (_lastDetectionTime.HasValue)
        {
            <p class="last-detection">上次检测: @_lastDetectionTime.Value.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</p>
        }

        @if (_encoders.Count > 0)
        {
            <div class="encoders-summary">
                <span class="summary-item available">✓ @_encoders.Count(e => e.IsAvailable) 个可用</span>
                <span class="summary-item unavailable">✗ @_encoders.Count(e => !e.IsAvailable) 个不可用</span>
            </div>

            <h3>硬件加速编码器</h3>
            <div class="encoders-grid">
                @foreach (var encoder in _encoders.Where(e => e.Type != EncoderType.Software))
                {
                    <EncoderCard Encoder="encoder" />
                }
            </div>

            <h3>软件编码器</h3>
            <div class="encoders-grid">
                @foreach (var encoder in _encoders.Where(e => e.Type == EncoderType.Software))
                {
                    <EncoderCard Encoder="encoder" />
                }
            </div>
        }
        else if (!_isLoading)
        {
            <p class="no-encoders">未检测到编码器，请确保 FFmpeg 已正确安装。</p>
        }
    </section>

    <section class="quick-start">
        <h2>🚀 快速开始</h2>
        <div class="quick-links">
            <a href="/convert" class="quick-link">
                <span class="quick-icon">🔄</span>
                <span class="quick-text">开始转换</span>
            </a>
            <a href="/templates" class="quick-link">
                <span class="quick-icon">📋</span>
                <span class="quick-text">管理模板</span>
            </a>
            <a href="/batch" class="quick-link">
                <span class="quick-icon">📁</span>
                <span class="quick-text">批量处理</span>
            </a>
        </div>
    </section>
</div>

@code {
    private FFmpegInfo? _ffmpegInfo;
    private List<HardwareEncoder> _encoders = [];
    private bool _isLoading = true;
    private bool _isRefreshing;
    private DateTime? _lastDetectionTime;

    protected override async Task OnInitializedAsync()
    {
        await LoadSystemStatus();
    }

    private async Task LoadSystemStatus()
    {
        _isLoading = true;
        StateHasChanged();

        try
        {
            _ffmpegInfo = await FFmpegService.GetFFmpegInfoAsync();

            if (_ffmpegInfo != null)
            {
                _encoders = await HardwareDetectionService.DetectEncodersAsync();
                _lastDetectionTime = HardwareDetectionService.LastDetectionTime;
            }
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshEncoders()
    {
        _isRefreshing = true;
        StateHasChanged();

        try
        {
            _encoders = await HardwareDetectionService.DetectEncodersAsync(forceRefresh: true);
            _lastDetectionTime = HardwareDetectionService.LastDetectionTime;
        }
        finally
        {
            _isRefreshing = false;
            StateHasChanged();
        }
    }
}

