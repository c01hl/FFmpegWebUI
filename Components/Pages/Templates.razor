@code {
    private List<CommandTemplate> _templates = [];
    private List<string> _categories = [];
    private string _searchText = string.Empty;
    private string? _selectedCategory;
    private bool _showSystem = true;
    private bool _showUser = true;
    private bool _isLoading = true;
    private string _message = string.Empty;
    private string _messageClass = string.Empty;
    private TemplateEditor? _editor;
    private TemplateDetailViewer? _detailViewer;
    private bool _showDeleteConfirm;
    private CommandTemplate? _templateToDelete;

    private List<CommandTemplate> _filteredTemplates => _templates
        .Where(t => _selectedCategory == null || t.Category == _selectedCategory)
        .Where(t => (_showSystem && t.Type == TemplateType.System) || (_showUser && t.Type == TemplateType.User))
        .Where(t => string.IsNullOrEmpty(_searchText) ||
                    t.Name.Contains(_searchText, StringComparison.OrdinalIgnoreCase) ||
                    t.Description.Contains(_searchText, StringComparison.OrdinalIgnoreCase))
        .OrderBy(t => t.Type)
        .ThenBy(t => t.SortOrder)
        .ToList();

    protected override async Task OnInitializedAsync()
    {
        await LoadTemplates();
    }

    private async Task LoadTemplates()
    {
        _isLoading = true;
        StateHasChanged();

        try
        {
            await TemplateService.InitializeSystemTemplatesAsync();
            _templates = await TemplateService.GetAllTemplatesAsync();
            _categories = await TemplateService.GetCategoriesAsync();
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void FilterByCategory(string? category)
    {
        _selectedCategory = category;
    }

    private async Task CreateTemplate()
    {
        if (_editor != null)
        {
            await _editor.OpenForCreate();
        }
    }

    private async Task EditTemplate(CommandTemplate template)
    {
        if (_editor != null)
        {
            await _editor.OpenForEdit(template);
        }
    }

    private void SelectTemplate(CommandTemplate template)
    {
        // å¯¼èˆªåˆ°è½¬æ¢é¡µé¢å¹¶é€‰æ‹©æ­¤æ¨¡æ¿
        // è¿™é‡Œå¯ä»¥å­˜å‚¨é€‰æ‹©æˆ–ç›´æ¥å¯¼èˆª
        _message = $"å·²é€‰æ‹©æ¨¡æ¿: {template.Name}";
        _messageClass = "info";
    }

    private void ViewTemplate(CommandTemplate template)
    {
        _detailViewer?.Open(template);
    }

    private async Task CopyTemplate(CommandTemplate template)
    {
        try
        {
            var newTemplate = await TemplateService.CopyTemplateAsync(template.Id);
            _message = $"âœ“ æ¨¡æ¿å·²å¤åˆ¶ä¸º \"{newTemplate.Name}\"";
            _messageClass = "success";
            await LoadTemplates();
        }
        catch (Exception ex)
        {
            _message = $"å¤åˆ¶å¤±è´¥: {ex.Message}";
            _messageClass = "error";
        }
    }

    private void DeleteTemplate(CommandTemplate template)
    {
        _templateToDelete = template;
        _showDeleteConfirm = true;
    }

    private void CancelDelete()
    {
        _showDeleteConfirm = false;
        _templateToDelete = null;
    }

    private async Task ConfirmDelete()
    {
        if (_templateToDelete == null) return;

        var success = await TemplateService.DeleteTemplateAsync(_templateToDelete.Id);
        
        if (success)
        {
            _message = $"æ¨¡æ¿ \"{_templateToDelete.Name}\" å·²åˆ é™¤";
            _messageClass = "success";
            await LoadTemplates();
        }
        else
        {
            _message = "åˆ é™¤å¤±è´¥ï¼Œç³»ç»Ÿæ¨¡æ¿ä¸å¯åˆ é™¤";
            _messageClass = "error";
        }

        _showDeleteConfirm = false;
        _templateToDelete = null;
    }

    private async Task OnTemplateSaved()
    {
        _message = "æ¨¡æ¿å·²ä¿å­˜";
        _messageClass = "success";
        await LoadTemplates();
    }
}

